{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "watchOptions": {
    "exclude": [
      "node_modules",
      "dist",
      "test",
      "../frontend",
      "../packages"
    ]
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "i18n/en/*.json",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "i18n/pt-BR/*.json",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ]
  }
}