NODE_ENV=development
PORT=8000

# MongoDB (local Docker with replica set for transactions)
MONGODB_URI=mongodb://localhost:27018/pokeranking
MONGODB_USER=
MONGODB_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d

# Email Configuration
# Comma-separated list of providers in priority order (first = highest priority)
# Available providers: resend, nodemailer
EMAIL_PROVIDERS=resend

# Resend (https://resend.com)
RESEND_API_KEY=[resend-api-key]
RESEND_FROM_EMAIL=onboarding@resend.dev

# SMTP/Nodemailer Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="Pokeranking <noreply@yourdomain.com>"

# Cache (Redis)
# Set to true to enable Redis caching (requires UPSTASH_REDIS_URL and UPSTASH_REDIS_TOKEN)
CACHE_ENABLED=false

# Redis - Upstash (required when CACHE_ENABLED=true)
# UPSTASH_REDIS_URL=[upstash-redis-url]
# UPSTASH_REDIS_TOKEN=[upstash-redis-token]

# CORS
CORS_ORIGIN=http://localhost:3000


SENTRY_DSN=
SENTRY_ENVIRONMENT=
SUPPORT_EMAIL=

# Image Upload Provider (cloudinary | imagekit)
IMAGE_PROVIDER=cloudinary

# Cloudinary (for Pokemon image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ImageKit (alternative to Cloudinary)
IMAGEKIT_PUBLIC_KEY=
IMAGEKIT_PRIVATE_KEY=
IMAGEKIT_URL_ENDPOINT=

